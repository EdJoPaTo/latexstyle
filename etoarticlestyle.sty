\newcommand\includewrapimage[2]{
	\begin{wrapfigure}{r}{0.4\textwidth}
		\begin{flushright}
			\vspace{-20pt}
			\includegraphics[width=0.38\textwidth,keepaspectratio]{#1}
			\vspace{#2}
		\end{flushright}
	\end{wrapfigure}
}

\newcommand\includecenterimage[1]{
	\begin{minipage}{\linewidth}
		\centering
		\vspace*{\baselineskip}
		\includegraphics[width=0.7\textwidth]{#1}
		\vspace{\baselineskip}
	\end{minipage}
}

\newcommand\includenamedcenterimage[2]{
	\begin{minipage}{\linewidth}
		\captionsetup{type=figure}
		\centering
		\vspace*{\baselineskip}
		\includegraphics[width=0.7\textwidth]{#1}
		\caption{#2}
		\label{fig:#1}
		\vspace{\baselineskip}
	\end{minipage}
}

\newcommand\includelargeimage[1]{
	\begin{minipage}{\linewidth}
		\centering
		\vspace*{\baselineskip}
		\includegraphics[width=\textwidth]{#1}
		\vspace{\baselineskip}
	\end{minipage}
}

\newcommand\includenamedlargeimage[2]{
	\begin{minipage}{\linewidth}
		\captionsetup{type=figure}
		\centering
		\vspace*{\baselineskip}
		\includegraphics[width=\textwidth]{#1}
		\caption{#2}
		\label{fig:#1}
		\vspace{\baselineskip}
	\end{minipage}
}

